<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Start Bootstrap - SB Admin Version 2.0 Demo{% endblock %}</title>
    {#<link rel="shortcut icon" href="http://work.sopinet.es/icofrade-web/web/uploads/favicon.ico" />#}

    {% block css %}
	   	{% stylesheets
	   		'@SopinetTemplateSbadmin2Bundle/Resources/public/css/bootstrap.min.css'
	   		'@SopinetTemplateSbadmin2Bundle/Resources/public/font-awesome/css/font-awesome.css'
	    	'@SopinetTemplateSbadmin2Bundle/Resources/public/css/plugins/morris/morris-0.4.3.min.css'
	    	'@SopinetTemplateSbadmin2Bundle/Resources/public/css/plugins/timeline/timeline.css'
	    	'@SopinetTemplateSbadmin2Bundle/Resources/public/css/plugins/social-buttons/social-buttons.css'
	    	'@SopinetTemplateSbadmin2Bundle/Resources/public/css/sb-admin.css'
	    	'@SopinetTemplateSbadmin2Bundle/Resources/public/css/custom.css'
	    	'@SopinetTemplateSbadmin2Bundle/Resources/public/css/chosen.css'
	    	'@SopinetTemplateSbadmin2Bundle/Resources/public/css/datepicker.css'
	    	'@SopinetTimelineBundle/Resources/assets/css/comments.css'
	    	'bundles/sopinettemplatesbadmin2/font-awesome/css/font-awesome.min.css'
	    	output='css/*.css' filter='cssrewrite' %}
	    	<link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />
		{% endstylesheets %}
		{% if colorFont is not defined %}
			{% set colorFont="428bca" %}
			{% set colorBack="f8f8f8" %}
		{% endif %}
		{% include 'SopinetTemplateSbadmin2Bundle:Base:color.html.twig' with {
			'colorFont': colorFont,
			'colorBack': colorBack
			}
		%}
    {% endblock %}
</head>

<div id="wrapper">
	{% block custombody %}<body>{% endblock %}
	{% block body %}
	    <h1>Hello, world!</h1>
	{% endblock %}
</div>

{% block js %}
	{% javascripts 
		'@SopinetTemplateSbadmin2Bundle/Resources/public/js/jquery-1.10.2.js'
		'@SopinetTemplateSbadmin2Bundle/Resources/public/js/bootstrap.min.js'
		'@SopinetTemplateSbadmin2Bundle/Resources/public/js/plugins/metisMenu/jquery.metisMenu.js'
		'@SopinetTemplateSbadmin2Bundle/Resources/public/js/plugins/morris/raphael-2.1.0.min.js'
		'@SopinetTemplateSbadmin2Bundle/Resources/public/js/plugins/morris/morris.js'
		'@SopinetTemplateSbadmin2Bundle/Resources/public/js/sb-admin.js'
		'@SopinetTemplateSbadmin2Bundle/Resources/public/js/demo/dashboard-demo.js'
		'@SopinetTemplateSbadmin2Bundle/Resources/public/js/chosen.jquery.js'
		'@SopinetTemplateSbadmin2Bundle/Resources/public/js/bootstrap-datepicker.js'
		'@SopinetTemplateSbadmin2Bundle/Resources/public/js/bootstrap-tooltip.js'

		
	%}
	<script type="text/javascript" src="{{ asset_url }}"></script>
	{% include 'SopinetTemplateSbadmin2Bundle:Confirmation:bootstrap-confirmation.js.twig' %}
	{% endjavascripts %}
	
	<script type="text/javascript">
		$('[data-toggle="confirmation"]').confirmation({popout: true, singleton: true});
		for(var i=0;i<$('[data-toggle="confirmationChange"]').length;i++){
			var url=$('#'+$('[data-toggle="confirmationChange"]')[i].id).attr('changeVisibility');
			var options=[
			 			{
				 		 popout: true
				 		,singleton: true
				 		,onConfirm: function(){
				 				$(location).attr('href',this.replace('replace',2));
					 		}.bind(url)
				 		,btnOkLabel:" oculto"
					 	,btnOkClass:"fa fa-eye-slash"
						,onCancel:function(){
								$(location).attr('href',this.replace('replace',1));	
							}.bind(url)
						,btnCancelLabel:" privado"
						,btnCancelClass:"fa fa-lock"
						},

			 			{
				 			popout: true 
					 		,singleton: true
					 		,onConfirm: function(){
					 				$(location).attr('href',this.replace('replace',2));	
					 				}.bind(url)
					 		,btnOkLabel:" oculto"
						 	,btnOkClass:"fa fa-eye-slash"
							,onCancel:function(){
									$(location).attr('href',this.replace('replace',0));							
								}.bind(url)
							,btnCancelLabel:" publico"
							,btnCancelClass:"fa fa-unlock"
						},
						
			 			{
				 			popout: true 
					 		,singleton: true
					 		,onConfirm: function(){						 			
					 			console.log(this);
					 			$(location).attr('href',this.replace('replace',0));
						 		}.bind(url)
					 		,btnOkLabel:" publico"
						 	,btnOkClass:"fa fa-unlock"
							,onCancel:function(){
								$(location).attr('href',this.replace('replace',1));								
								}.bind(url)
							,btnCancelLabel:" privado"
							,btnCancelClass:"fa fa-lock"
						}
						];
			var option=$('#'+$('[data-toggle="confirmationChange"]')[i].id).attr('groupVisibility');		
			$('#'+$('[data-toggle="confirmationChange"]')[i].id).confirmation(options[option]);
		}
	</script>
{% endblock %}
    
</body>
</html>